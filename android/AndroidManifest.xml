<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.tashawych.collector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="co.tashawych.collector.Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.tashawych.collector.Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.tashawych.collector.AddCollection"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.tashawych.collector.ViewCollection"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.tashawych.collector.BrowseCollections"
            android:screenOrientation="portrait" />
    </application>

</manifest>